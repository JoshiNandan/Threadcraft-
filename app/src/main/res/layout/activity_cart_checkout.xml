<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display Customized T-shirt -->
    <ImageView
        android:id="@+id/imgTshirt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tshirt_red" />

    <TextView
        android:id="@+id/txtCustomization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customized Text: ThreadCraft"
        android:textSize="18sp"
        android:paddingTop="8dp" />

    <!-- User Address Inputs -->
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Address"
        android:inputType="textPostalAddress"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edtCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your City"
        android:inputType="text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edtPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Postal Code"
        android:inputType="number"
        android:padding="8dp" />

    <!-- Checkout Button -->
    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Pay"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/black"/>
</LinearLayout>
